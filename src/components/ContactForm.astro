---
// Contact form component
---

<section class="py-6 md:py-10 lg:py-20 px-4 z-0 relative" id="contact">
  <div class="container mx-auto max-w-4xl relative z-10">


    <!-- Two column layout for lg and higher -->
    <div class="lg:grid lg:grid-cols-2 lg:gap-12 lg:items-start">
      <!-- Left column - Text content -->
      <div class="max-w-sm mx-auto">
        <div class="text-center mb-8 lg:mb-0 text-balance">
          <h2 class="text-4xl font-bold text-pink mb-5  relative z-10">
            Get in touch
          </h2>
          <p class="text-base text-black mb-4 text-pretty">We'd love to hear from you. <br>  Reach out to us with your questions, ideas, or to <br> get involved in our mission.
          </p>
        </div>
      </div>

      <!-- Right column - Form -->
      <div class="lg:pl-8">
        <form class="max-w-xl mx-auto lg:max-w-none space-y-6" id="contact-form">
      <!-- Name Field -->
      <div>
        <label for="name" class="block md:text-lg font-medium text-black mb-2 text-center">
          Name
        </label>
        <input
          type="text"
          id="name"
          name="name"
          required
          class="w-full px-4 py-3 rounded-3xl border border-gray-200 bg-gray-100 focus:outline-none focus:bg-white focus:ring-1 focus:ring-secondary focus:border-transparent transition-all duration-200 shadow-inner placeholder:text-sm placeholder:text-gray-400"
          placeholder="Your name"

        />
      </div>

      <!-- Email Field -->
      <div>
        <label for="email" class="block md:text-lg font-medium text-black mb-2 text-center ">
          Email
        </label>
        <input
          type="email"
          id="email"
          name="email"
          required
          class="w-full px-4 py-3 rounded-3xl border border-gray-200 bg-gray-100 focus:outline-none focus:bg-white focus:ring-1 focus:ring-secondary focus:border-transparent transition-all duration-200 shadow-inner placeholder:text-sm placeholder:text-gray-400"
          placeholder="your.email@example.com"
        />
      </div>

      <!-- Message Field -->
      <div>
        <label for="message" class="block md:text-lg font-medium text-black mb-2 text-center ">
          Message
        </label>
        <textarea
          id="message"
          name="message"
          rows="5"
          required
          class="w-full px-4 py-3 rounded-3xl border border-gray-200 bg-gray-100 focus:outline-none focus:bg-white focus:ring-1 focus:ring-secondary focus:border-transparent transition-all duration-200 shadow-inner resize-vertical placeholder:text-sm placeholder:text-gray-400"
          placeholder="Tell us about your questions, ideas, or how you'd like to get involved..."
        ></textarea>
      </div>

      <!-- Submit Button -->
      <div class="text-center pt-4">
        <button
          type="submit"
          class="inline-flex items-center px-8 py-3 bg-orange-500 text-white  text-xl rounded-3xl hover:bg-orange-600 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:ring-offset-2 transition-all duration-200 "
        >
          Send
        </button>
        </div>
      </form>
      </div>
    </div>
  </div>


</section>


<style>
  input, textarea {
    /* background-color: hsla(0, 0%, 85%, 0.45);
    box-shadow: -3px 2px 4px 0px hsla(0, 0%, 0%, 0.13) inset;
    &:focus {
      box-shadow: -3px 2px 4px 0px hsla(0, 0%, 0%, 0.13) inset;
      background-color: hsla(0, 0%, 98%, 1);
    } */
  }
</style>

<script>
  const contactForm = document.getElementById('contact-form') as HTMLFormElement;
  contactForm?.addEventListener('submit', function(e) {
    e.preventDefault();

    // Get form data
    const formData = new FormData(this);
    const name = formData.get('name');
    const email = formData.get('email');
    const message = formData.get('message');

    // Basic validation
    if (!name || !email || !message) {
      alert('Please fill in all fields.');
      return;
    }

    // Here you would typically send the data to your backend
    // For now, we'll just show a success message
    alert('Thank you for your message! We\'ll get back to you soon.');

    // Reset form
    this.reset();
  });
</script>
